<GridPane hgap="10.0" minHeight="275.0" minWidth="300.0" prefHeight="275.0" prefWidth="300.0" vgap="10.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="com.example.javafx.calculator.CalculatorController">
  <children>
    <Button fx:id="backspace" maxHeight="Infinity" maxWidth="Infinity"   text="⌫" GridPane.columnIndex="0" GridPane.rowIndex="1" onAction="#clickBackSpace"/>
    <TextField fx:id="display" maxHeight="Infinity" maxWidth="Infinity" prefWidth="200.0" text="0" GridPane.columnIndex="0" GridPane.columnSpan="5" GridPane.rowIndex="0" />
    <Button fx:id="empty" maxHeight="Infinity" maxWidth="Infinity"   text="" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Button fx:id="clearEntered" maxHeight="Infinity" maxWidth="Infinity"   text="C" GridPane.columnIndex="2" GridPane.rowIndex="1" onAction = "#buttonClear"/>
    <Button fx:id="buttonPlus_minus" maxHeight="Infinity" maxWidth="Infinity"   text="±" GridPane.columnIndex="3" GridPane.rowIndex="1" onAction="#buttonNegate"/>
    <Button fx:id="buttonSqrtRoot" maxHeight="Infinity" maxWidth="Infinity"   text="√" GridPane.columnIndex="4" GridPane.rowIndex="1" onAction="#buttonSqrtClick" />
    <Button fx:id="buttonPercentage" maxHeight="Infinity" maxWidth="Infinity"   text="\%" GridPane.columnIndex="4" GridPane.rowIndex="2" />
    <Button fx:id="buttonSeven" maxHeight="Infinity" maxWidth="Infinity"   text="7" GridPane.columnIndex="0" GridPane.rowIndex="2" onAction="#clickDigit"/>
    <Button fx:id="buttonEight" maxHeight="Infinity" maxWidth="Infinity"   text="8" GridPane.columnIndex="1" GridPane.rowIndex="2" onAction="#clickDigit"/>
    <Button fx:id="buttonNine" maxHeight="Infinity" maxWidth="Infinity"   text="9" GridPane.columnIndex="2" GridPane.rowIndex="2" onAction="#clickDigit"/>
    <Button fx:id="buttonDivide" maxHeight="Infinity" maxWidth="Infinity"   text="÷" GridPane.columnIndex="3" GridPane.rowIndex="2" />
    <Button fx:id="buttonFour" maxHeight="Infinity" maxWidth="Infinity"   text="4" GridPane.columnIndex="0" GridPane.rowIndex="3" onAction="#clickDigit"/>
    <Button fx:id="buttonFive" maxHeight="Infinity" maxWidth="Infinity"   text="5" GridPane.columnIndex="1" GridPane.rowIndex="3" onAction="#clickDigit"/>
    <Button fx:id="buttonSix" maxHeight="Infinity" maxWidth="Infinity"   text="6" GridPane.columnIndex="2" GridPane.rowIndex="3" onAction="#clickDigit"/>
    <Button fx:id="buttonMultiply" maxHeight="Infinity" maxWidth="Infinity"   text="×" GridPane.columnIndex="3" GridPane.rowIndex="3" />
    <Button fx:id="buttonFraction" maxHeight="Infinity" maxWidth="Infinity"   text="1/x" GridPane.columnIndex="4" GridPane.rowIndex="3" onAction="#getFraction" />
    <Button fx:id="buttonOne" maxHeight="Infinity" maxWidth="Infinity"   text="1" GridPane.columnIndex="0" GridPane.rowIndex="4" onAction="#clickDigit"/>
    <Button fx:id="buttonTwo" maxHeight="Infinity" maxWidth="Infinity"   text="2" GridPane.columnIndex="1" GridPane.rowIndex="4" onAction="#clickDigit"/>
    <Button fx:id="buttonThree" maxHeight="Infinity" maxWidth="Infinity"   text="3" GridPane.columnIndex="2" GridPane.rowIndex="4" onAction="#clickDigit"/>
    <Button fx:id="buttonMinus" maxHeight="Infinity" maxWidth="Infinity"   text="-" GridPane.columnIndex="3" GridPane.rowIndex="4" />
    <Button fx:id="buttonEquals" maxHeight="Infinity" maxWidth="Infinity"   prefHeight="75.0" prefWidth="50.0" text="=" GridPane.columnIndex="4" GridPane.rowIndex="4" GridPane.rowSpan="2" />
    <Button fx:id="buttonZero" maxHeight="Infinity" maxWidth="Infinity"   prefHeight="35.0" prefWidth="110.0" text="0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="5" onAction="#clickDigit"/>
    <Button fx:id="buttonComma" maxHeight="Infinity" maxWidth="Infinity"   text="," GridPane.columnIndex="2" GridPane.rowIndex="5" onAction="#buttonCommaClick"/>
    <Button fx:id="buttonPlus" maxHeight="Infinity" maxWidth="Infinity"   text="+" GridPane.columnIndex="3" GridPane.rowIndex="5" />
